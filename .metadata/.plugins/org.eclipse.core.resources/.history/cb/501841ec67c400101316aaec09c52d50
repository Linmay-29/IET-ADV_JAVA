package com.demo.service;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Scanner;

import com.demo.beans.Employee;
import com.demo.dao.EmpDao;
import com.demo.dao.EmpDaoImpl;

public class EmpServiceImpl implements EmpService {
	private EmpDao edao;
	
	public EmpServiceImpl() {
		edao=new EmpDaoImpl();
	}
	@Override
	public boolean insertEmp() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter id");
		int eid = sc.nextInt();
		System.out.println("Enter name");
		String ename = sc.next();
		System.out.println("Enter sal");
		double sal = sc.nextDouble();
		System.out.println("Enter hiredate (yyyy-mm-dd)");
		String hiredate = sc.next();
		LocalDate ldt = LocalDate.parse(hiredate,DateTimeFormatter.ofPattern("yyyy-MM-dd"));
		Employee emp = new Employee(eid,ename,sal,ldt);
		return edao.addEmp(emp);
	}
	@Override
	public boolean updateEmpSal() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter emp id");
		int eid=sc.nextInt();
		System.out.println("Enter sal");
		double sal = sc.nextDouble();
		return edao.updateSal(eid,sal);
	}
	@Override
	public void printEmp() {
		edao.showEmp();
	}
	@Override
	public void showSalByID() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter emp id");
		int eid=sc.nextInt();
	
		edao.showSalById(eid);
	}

}
