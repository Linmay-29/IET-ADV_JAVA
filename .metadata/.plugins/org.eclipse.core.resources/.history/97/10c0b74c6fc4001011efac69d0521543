package com.demo.test;

import java.util.Scanner;

import com.demo.dao.HBUtils;
import com.demo.service.EmpService;
import com.demo.service.EmpServiceImpl;

public class MyJDBCTest {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		EmpService eservice = new EmpServiceImpl();
		int choice;
		
		do {
			System.out.println("1.Insert emp \n2.update emp sal \n3.print employees \n4.Show sal by Id (Using Procedure call)"
					+"\n5.delete emp by id \n6.Calculate Sum of sal (Using function) \n7.exit");
			choice =sc.nextInt();
			boolean status=false;
			switch(choice) {
			case 1->{
				status = eservice.insertEmp();
				if(status) {
					System.out.println("Data inserted");
				}else {
					System.out.println("Data not inserted");
				}
			}
			case 2->{
				status = eservice.updateEmpSal();
				if(status) {
					System.out.println("Data updated");
				}else {
					System.out.println("Data not updated");
				}
			}
			case 3->{
				eservice.printEmp();
			}
			case 4->{
				eservice.showSalByID();
			}
			case 5->{
				status=eservice.deleteEmpById();
				if(status) {
					System.out.println("Data deleted");
				}else {
					System.out.println("Data not found");
				}
			}
			case 6->{
				System.out.println("Thank you");
				sc.close();
				HBUtils.closeConnection();
			}
			default->{
				System.out.println("Wrong choice");
			}
			}
		}while(choice!=6);
	}
}
