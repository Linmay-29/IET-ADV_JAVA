package com.demo.test;

import java.util.Scanner;

import com.demo.service.EmpService;
import com.demo.service.EmpServiceImpl;

public class MyJDBCTest {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		EmpService eservice = new EmpServiceImpl();
		int choice;
		
		do {
			System.out.println("1.Insert emp \n2.update emp sal \n3.print emp using id \n4.exit");
			choice =sc.nextInt();
			switch(choice) {
			case 1->{
				boolean status = eservice.insertEmp();
				if(status) {
					System.out.println("Data inserted");
				}else {
					System.out.println("Data not inserted");
				}
			}
			case 2->{
				boolean status = eservice.updateEmpSal();
				if(status) {
					System.out.println("Data inserted");
				}else {
					System.out.println("Data not inserted");
				}
			}
			case 4->{
				System.out.println("Thank you");
				sc.close();
			}
			default->{
				System.out.println("Wrong choice");
			}
			}
		}while(choice!=4);
	}

}
